<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_loyalty_partial_redeem_wizard" model="ir.ui.view">
        <field name="name">loyalty.partial.redeem.wizard.form</field>
        <field name="model">loyalty.partial.redeem.wizard</field>
        <field name="arch" type="xml">
            <form string="Redeem Loyalty Points">
                <group>
                    <field name="sale_order_id"/>
                    <field name="loyalty_card_id"/>
                    <field name="available_points"/>
                    <field name="points_to_use"/>
                    <field name="rm_per_point"/>
                    <field name="amount_discount"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
