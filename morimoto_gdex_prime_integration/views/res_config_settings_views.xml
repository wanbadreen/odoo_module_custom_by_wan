<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_gdex" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.gdex</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='stock_inventory']" position="inside">
                <div class="app_settings_block" data-string="GDEX Prime" string="GDEX Prime">
                    <h2>GDEX Prime</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="gdex_account_no"/>
                                <div class="text-muted">
                                    Configure the GDEX Prime account and environment.
                                </div>
                                <div class="mt16">
                                    <field name="gdex_account_no" groups="stock.group_stock_user"/>
                                </div>
                                <div class="mt16">
                                    <field name="gdex_environment" groups="stock.group_stock_user"/>
                                </div>
                                <div class="mt16">
                                    <field name="gdex_base_url" groups="stock.group_stock_user"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="gdex_api_token_sandbox"/>
                                <div class="text-muted">
                                    Tokens are stored per company and masked in the UI.
                                </div>
                                <div class="mt16">
                                    <field name="gdex_api_token_sandbox" widget="password" groups="stock.group_stock_user"/>
                                </div>
                                <div class="mt16">
                                    <field name="gdex_api_token_production" widget="password" groups="stock.group_stock_user"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
